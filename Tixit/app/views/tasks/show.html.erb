<div class="col-md-10 col-md-offset-1">
  <h2><%= @task.title %></h2>
  <p><%= @task.description %></p>

  <div class="col-md-4 col-md-offset-4">
    <%= link_to "Edit", edit_task_path, class: "btn btn-default" %>
    <%= link_to "Delete", task_path, method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: "btn btn-danger" %>
    <%= link_to "Back", root_path, class: "btn btn-default" %>
  </div>
</div>
